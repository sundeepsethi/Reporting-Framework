<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns:f="sap.ui.layout.form" >
   <Dialog
      title ="{i18n>selectionScreen}" resizable="true" contentWidth="60%" contentHeight="60%" stretchOnPhone="false">
   	<content></content>
      <beginButton>
         <Button
            text="{i18n>dialogBeginButtonText}"
            press="_onSubmitDialog"/>
      </beginButton>
      <endButton>
      	<Button
            text="{i18n>dialogCloseButtonText}"
            press="_onCloseDialog"/>
      </endButton>
   </Dialog>
</core:FragmentDefinition>